{
  "parser": "@typescript-eslint/parser",
  "env": {
    "es2020": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "error",
    "@typescript-eslint/semi": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-throw-literal": "error",
    "semi": "off"
  }
}